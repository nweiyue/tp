<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ScrollPane?>
<fx:root title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" minWidth="1300.0" minHeight="600.0">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
        <stylesheets>
            <URL value="@DarkTheme.css" />
            <URL value="@Extensions.css" />
        </stylesheets>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox styleClass="help-window" prefHeight="800.0">
                <HBox>
                    <children>
                        <Label fx:id="helpMessage" text="Label">
                            <Insets right="5.0" />
                        </Label>
                    </children>
                    <opaqueInsets>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>
                <Label styleClass="tableHeader" text="General:">
                </Label>
                <!--Solution below adapted from https://github.com/AY2021S1-CS2103T-W15-3/tp/blob/master/src/main/resources/view/HelpWindow.fxml-->
                <TableView id="generalCommandTable" fx:id="generalCommandTable" stylesheets="@DarkTheme.css" VBox.vgrow="SOMETIMES" focusTraversable="false">
                    <columns>
                        <TableColumn styleClass="actionColumn" editable="false" minWidth="200.0" prefWidth="-1.0" text="Action" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="action" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn styleClass="commandColumn" editable="false" minWidth="400.0" prefWidth="-1.0" text="Command Format" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="commandFormat" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </TableView>

                <Label styleClass="tableHeader" text="Students:">
                </Label>
                <TableView id="studentsCommandTable" fx:id="studentsCommandTable" stylesheets="@DarkTheme.css" VBox.vgrow="SOMETIMES" focusTraversable="false">
                    <columns>
                        <TableColumn styleClass="actionColumn" editable="false" minWidth="200.0" prefWidth="-1.0" text="Action" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="action" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn styleClass="commandColumn" editable="false" minWidth="400.0" prefWidth="-1.0" text="Command Format" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="commandFormat" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </TableView>

                <Label styleClass="tableHeader" text="Sessions:">
                </Label>
                <TableView id="sessionsCommandTable" fx:id="sessionsCommandTable" stylesheets="@DarkTheme.css" VBox.vgrow="SOMETIMES" focusTraversable="false">
                    <columns>
                        <TableColumn styleClass="actionColumn" editable="false" minWidth="200.0" prefWidth="-1.0" text="Action" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="action" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn styleClass="commandColumn" editable="false" minWidth="400.0" prefWidth="-1.0" text="Command Format" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="commandFormat" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </TableView>

                <Label styleClass="tableHeader" text="Current Session:">
                </Label>
                <TableView id="currentSessionCommandTable" fx:id="currentSessionCommandTable" stylesheets="@DarkTheme.css" VBox.vgrow="SOMETIMES" focusTraversable="false">
                    <columns>
                        <TableColumn styleClass="actionColumn" editable="false" minWidth="200.0" prefWidth="-1.0" text="Action" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="action" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn styleClass="commandColumn" editable="false" minWidth="400.0" prefWidth="-1.0" text="Command Format" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="commandFormat" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </TableView>

                <Label styleClass="tableHeader" text="Memo:">
                </Label>
                <TableView id="memoCommandTable" fx:id="memoCommandTable" stylesheets="@DarkTheme.css" VBox.vgrow="SOMETIMES" focusTraversable="false">
                    <columns>
                        <TableColumn styleClass="actionColumn" editable="false" minWidth="200.0" prefWidth="-1.0" text="Action" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="action" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn styleClass="commandColumn" editable="false" minWidth="400.0" prefWidth="-1.0" text="Command Format" sortable="false">
                            <cellValueFactory><PropertyValueFactory property="commandFormat" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="5.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </TableView>

                <HBox alignment="CENTER">
                    <children>
                        <Label fx:id="linkMessage" text="Label">
                            <HBox.margin>
                                <Insets right="5.0" />
                            </HBox.margin>
                        </Label>
                        <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>
            </VBox>
        </ScrollPane>
    </Scene>
  </scene>
</fx:root>
